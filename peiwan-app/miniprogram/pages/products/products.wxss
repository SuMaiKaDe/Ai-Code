.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  background-color: #ffffff;
  padding: 20rpx;
  border-bottom: 1rpx solid #e4e7ed;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 25rpx;
  padding: 0 20rpx;
}

.search-field {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
}

.search-btn {
  font-size: 28rpx;
  color: #409eff;
  padding: 0 10rpx;
}

/* 分类标签 */
.category-tabs {
  background-color: #ffffff;
  white-space: nowrap;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e4e7ed;
}

.tab-item {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin: 0 10rpx;
  font-size: 28rpx;
  color: #666666;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.tab-item.active {
  color: #ffffff;
  background-color: #409eff;
}

/* 商品列表 */
.product-list {
  padding: 20rpx;
}

.product-item {
  display: flex;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-desc {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  color: #f56c6c;
  font-weight: bold;
}

.product-category {
  font-size: 24rpx;
  color: #409eff;
  background-color: #ecf5ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

/* 加载状态 */
.loading-status {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}