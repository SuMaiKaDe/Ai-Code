.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息 */
.user-info {
  background-color: #409eff;
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
  color: #ffffff;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid #ffffff;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-meta {
  display: flex;
  align-items: center;
}

.level {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.points {
  font-size: 24rpx;
}

/* 菜单列表 */
.menu-section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.menu-title {
  font-size: 32rpx;
  color: #333333;
}

.menu-right {
  display: flex;
  align-items: center;
}

.arrow {
  font-size: 28rpx;
  color: #c0c4cc;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 20rpx;
}

.logout-btn {
  background-color: #ffffff;
  color: #f56c6c;
  text-align: center;
  padding: 30rpx 0;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.logout-btn:active {
  background-color: #fafafa;
}